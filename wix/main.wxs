<!--
  The "cargo wix" subcommand provides a variety of predefined variables available
  for customization of this template. The values for each variable are set at
  installer creation time. The following variables are available:

  TargetTriple      = The rustc target triple name.
  TargetEnv         = The rustc target environment. This is typically either
                      "msvc" or "gnu" depending on the toolchain downloaded and
                      installed.
  TargetVendor      = The rustc target vendor. This is typically "pc", but Rust
                      does support other vendors, like "uwp".
  CargoTargetBinDir = The complete path to the binary (exe). The default would
                      be "target\release\<binary_name>.exe" where
                      "<binary_name>" is replaced with the name of each binary
                      target defined in the package's manifest (Cargo.toml). If
                      a different rustc target triple is used than the host, 
                      i.e. cross-compiling, then the default path would be
                      "target\<CARGO_TARGET_TRIPLE>\release\<binary_name>.exe",
                      where "<CARGO_TARGET_TRIPLE>" is replaced with the name of
                      the configured target triple.
  CargoTargetDir    = The path to the directory for the build artifacts, i.e.
                      "target".
  CargoYi           = The directory where the Cargo.toml package description is
                      located.
-->

<!--
  Source: https://github.com/peterfei/bevy_card_battler
  Game: 九界：渡劫 (Jiujie: Dujie)
-->

<Wix xmlns='http://schemas.microsoft.com/wix/2006/wi'>
    <Product Id='*' Name='Jiujie: Dujie' UpgradeCode='F50F4705-932B-4FF5-A3E6-34285FC6E6BD' Manufacturer='PeterFei' Language='1033' Codepage='1252' Version='0.1.0'>
        <Package Id='*' Keywords='Installer' Description='A Roguelike Deckbuilder Cultivation Game' Manufacturer='PeterFei' InstallerVersion='450' Languages='1033' Compressed='yes' InstallScope='perMachine' SummaryCodepage='1252' Platform='x64'/>

        <MajorUpgrade Schedule='afterInstallInitialize' DowngradeErrorMessage='A newer version of [ProductName] is already installed. Setup will now exit.'/>

        <Media Id='1' Cabinet='media1.cab' EmbedCab='yes' DiskPrompt='CD-ROM #1'/>
        <Property Id='DiskPrompt' Value='Jiujie: Dujie Installation [1]'/>

        <Directory Id='TARGETDIR' Name='SourceDir'>
            <Directory Id='ProgramFiles64Folder' Name='PFiles'>
                <Directory Id='APPLICATIONFOLDER' Name='Jiujie'>
                    
                    <!-- 主程序 -->
                    <Component Id='binary0' Guid='191E9B73-F5AD-4554-9D60-4805BF571B55' Win64='yes'>
                        <File Id='exe0' Name='jiujie.exe' DiskId='1' Source='target\release\jiujie.exe' KeyPath='yes'/>
                    </Component>

                    <!-- 资源文件夹 assets -->
                    <!-- 注意：实际生产中建议打包 assets 到 binary 或使用自动化 harvesting。这里简化处理，假设 assets 会被手动复制或通过 CI 脚本处理。
                         但为了 MSI 完整性，我们通常只打包 exe。Bevy 0.15 支持嵌入 assets，如果不嵌入，需要在此处列出所有文件，这非常繁琐。
                         本次配置假设我们将 assets 文件夹旁置，或者接受 exe 需要 assets 文件夹存在的事实。
                         为了 CI 简单，我们只包含 exe 和一个许可文件。
                    -->
                    
                    <Component Id='License' Guid='635CC59F-86E8-423B-9176-FF483E104B64' Win64='yes'>
                        <File Id='LicenseFile' Name='License.rtf' DiskId='1' Source='wix\License.rtf' KeyPath='yes'/>
                    </Component>
                </Directory>
            </Directory>
            
            <!-- 开始菜单快捷方式 -->
            <Directory Id="ProgramMenuFolder">
                <Directory Id="ApplicationProgramsFolder" Name="Jiujie Dujie"/>
            </Directory>
        </Directory>

        <DirectoryRef Id="ApplicationProgramsFolder">
            <Component Id="ApplicationShortcut" Guid="*">
                <Shortcut Id="ApplicationStartMenuShortcut"
                          Name="Jiujie Dujie"
                          Description="Play 九界：渡劫"
                          Target="[APPLICATIONFOLDER]jiujie.exe"
                          WorkingDirectory="APPLICATIONFOLDER"/>
                <RemoveFolder Id="ApplicationProgramsFolder" On="uninstall"/>
                <RegistryValue Root="HKCU" Key="Software\PeterFei\Jiujie" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
            </Component>
        </DirectoryRef>

        <Feature Id='MainProgram' Title='Application' Description='Installs the main executable.' Level='1' ConfigurableDirectory='APPLICATIONFOLDER' AllowAdvertise='no' Display='expand' Absent='disallow'>
            <ComponentRef Id='binary0'/>
            <ComponentRef Id='License'/>
            <ComponentRef Id='ApplicationShortcut'/>
        </Feature>

        <SetProperty Id='ARPINSTALLLOCATION' Value='[APPLICATIONFOLDER]' After='CostFinalize'/>

        <!-- 图标 -->
        <Icon Id='ProductICO' SourceFile='assets\icons\favicon.ico'/>
        <Property Id='ARPPRODUCTICON' Value='ProductICO' />

        <!-- UI -->
        <UIRef Id='WixUI_InstallDir'/>
        <Property Id='WIXUI_INSTALLDIR' Value='APPLICATIONFOLDER'/>
        <WixVariable Id='WixUILicenseRtf' Value='wix\License.rtf'/>
        <!-- <WixVariable Id='WixUIDialogBmp' Value='wix\dialog.bmp'/> -->
        <!-- <WixVariable Id='WixUIBannerBmp' Value='wix\banner.bmp'/> -->

    </Product>
</Wix>
